# =============================================================================
# TEAM CODE COMPASS - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control!

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_USER=flexfit_user
POSTGRES_DB=flexfit_prod

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT Secret - Use a long, random string (minimum 32 characters)
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters_long

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# GenAI API Key (TUM Chair API)
CHAIR_API_KEY=sk-593e77377c5c4035a73ae486bd57f6ce

# =============================================================================
# CACHING
# =============================================================================
REDIS_PASSWORD=your_secure_redis_password_here

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
GRAFANA_PASSWORD=your_secure_grafana_password_here

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
# Environment (development, staging, production)
ENVIRONMENT=production

# Application URLs
APP_BASE_URL=https://team-code-compass.com
API_BASE_URL=https://api.team-code-compass.com

# =============================================================================
# NOTIFICATION SERVICES (Optional)
# =============================================================================
# Slack webhook for notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Email configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
LOG_LEVEL=INFO
ENABLE_METRICS=true
METRICS_PORT=9090

# =============================================================================
# SECURITY HEADERS & CORS
# =============================================================================
ALLOWED_ORIGINS=https://team-code-compass.com,https://www.team-code-compass.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================
# Database connection pool
DB_POOL_SIZE=10
DB_MAX_CONNECTIONS=20

# JVM settings for Java services
JAVA_OPTS=-Xmx512m -Xms256m

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_REGISTRATION=true
ENABLE_GUEST_ACCESS=false
ENABLE_PREMIUM_FEATURES=true

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# API Gateway URL for frontend to connect to backend services
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000/api/v1 