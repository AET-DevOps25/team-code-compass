# =============================================================================
# TEAM CODE COMPASS - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control!

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_USER=flexfit
POSTGRES_PASSWORD=flexfit123
POSTGRES_DB=flexfit

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT Secret - Use a long, random string (minimum 32 characters)
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRATION=86400000

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# GenAI API Key (TUM Chair API)
CHAIR_API_KEY=your_chair_api_key_here
OPEN_WEBUI_BASE_URL=https://gpu.aet.cit.tum.de
MODEL_NAME=gpt-3.5-turbo

# =============================================================================
# CACHING
# =============================================================================
REDIS_PASSWORD=your_secure_redis_password_here

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
GRAFANA_PASSWORD=your_secure_grafana_password_here

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
# Environment (development, staging, production)
ENVIRONMENT=production

# Application URLs
APP_BASE_URL=https://team-code-compass.com
API_BASE_URL=https://api.team-code-compass.com

# =============================================================================
# NOTIFICATION SERVICES (Optional)
# =============================================================================
# Slack webhook for notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Email configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
LOG_LEVEL=INFO
ENABLE_METRICS=true
METRICS_PORT=9090

# =============================================================================
# SECURITY HEADERS & CORS
# =============================================================================
ALLOWED_ORIGINS=https://team-code-compass.com,https://www.team-code-compass.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================
# Database connection pool
DB_POOL_SIZE=10
DB_MAX_CONNECTIONS=20

# JVM settings for Java services
JAVA_OPTS=-Xmx512m -Xms256m

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_REGISTRATION=true
ENABLE_GUEST_ACCESS=false
ENABLE_PREMIUM_FEATURES=true

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# API Gateway URL for frontend to connect to backend services
NEXT_PUBLIC_API_URL=http://localhost:8080 